//Common style text box
@mixin iptcss($iptWidth:251px,$iptHeight:32px,$iptBorderWidth:0px){
  width:$iptWidth;
  height:$iptHeight;
  border:$iptBorderWidth solid $borderColor;
  padding: 0px 10px;
  line-height:$iptHeight;
  display: inline-block;
}
//The rounded button style of public by default
@mixin radiusBtn($buttonWidth:80px,$buttonHeight:30px,$bg:$mainColor,$fC:$mainColor,$borderCol:$mainColor,$radius:$angle){
  width:$buttonWidth;
  height:$buttonHeight;
  color:$fC;
  font-size: 12px;
  border:1px solid $borderCol;
  border-radius: $radius;
  line-height:($buttonHeight)-2;
  background-color:$bg;
  text-align: center;
  vertical-align: middle;
  display: inline-block;
  cursor: pointer;
  padding: 0;
}

