//Common style text box
@mixin iptcss($iptWidth:251px,$iptHeight:32px){
  width:$iptWidth;
  height:$iptHeight;
  border:0;
  padding: 0px 10px;
  line-height:$iptHeight;
  display: inline-block;
}
//The rounded button style of public by default
@mixin radiusBtn($buttonWidth:80px,$buttonHeight:30px,$bg:$mainColor,$fC:$mainColor,$borderCol:$mainColor){
  width:$buttonWidth;
  height:$buttonHeight;
  color:$fC;
  font-size: 12px;
  padding: 0px 10px;
  border:1px solid $borderCol;
  border-radius: $buttonHeight;
  line-height:$buttonHeight;
  background:$bg;
  text-align: center;
  vertical-align: middle;
  display: inline-block;
}

//Square horn button common style
@mixin squareBtn($buttonWidth:80px,$buttonHeight:30px,$bg:$mainColor,$fC:$mainColor,$borderCol:$mainColor){
  width:$buttonWidth;
  height:$buttonHeight;
  color:$fC;
  font-size: 12px;
  padding: 0px 10px;
  border:1px solid $borderCol;
  line-height:$buttonHeight;
  background:$bg;
  text-align: center;
  vertical-align: middle;
  display: inline-block;
}

//Left corner button common style
@mixin leftRadiusBtn($buttonWidth:80px,$buttonHeight:30px,$bg:$mainColor,$fC:$mainColor,$borderCol:$mainColor){
  width:$buttonWidth;
  height:$buttonHeight;
  color:$fC;
  font-size: 12px;
  padding: 0px 10px;
  border:1px solid $borderCol;
  border-radius:$buttonHeight 0px 0px $buttonHeight;
  line-height:$buttonHeight;
  background:$bg;
  text-align: center;
  vertical-align: middle;
  display: inline-block;
}