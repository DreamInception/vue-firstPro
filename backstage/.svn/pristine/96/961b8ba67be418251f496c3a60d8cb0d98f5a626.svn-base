@import "config";
@import "compass";
$bg-color:#fff;
$text-color: #666;
$border-color:#d2d2d2;
@import "table";
@import "page";
@import "selectbox";

.electronic{
  margin-left: 16px;
  font-size: 14px;
  .top{
    margin:16px 0 16px 0;
    min-width: 1020px;
    width: 100%;
    height: 50px;
    line-height: 50px;
    background: $whiteColor;
    a{
      display: inline-block;
      color:$tabColor;
      font-size: 14px;
      margin-left: 16px;
      width: 88px;
      height: 30px;
      line-height: 30px;
      text-align: center;
      &.aSelected{
        background: $btnBg;
        border-radius: 3px;
      }
    }
  }
  .hotWord-top{
    padding:16px 0 0 16px;
    min-width: 1020px;
    width: 100%;
    height: 62px;
    position: relative;
    //line-height: 62px;
    background: $whiteColor;
    .add{
      width: 376px;
      height: 30px;
      text-indent:16px;
      float: left;
    }
    .btn-newAdd{
      @include radiusBtn(80px,30px,$btnBg,$tabColor,$btnBg,5px);
      margin-left: 16px;
      float: left;
      color:$whiteColor;
      font-size: 14px;
    }
    .btn-allAdd{
      @include radiusBtn(80px,30px,$btnBg,$tabColor,$btnBg,5px);
      margin-left: 16px;
      float: left;
      color:$whiteColor;
      font-size: 14px;
    }
    .allAdd-div{
      display: none;
      width: 320px;
      height: 350px;
      border:1px solid $borderColor;
      border-radius: 5px;
      background: $whiteColor;
      position: absolute;
      z-index:10;
      top:54px;
      left:500px;
      h4{
        margin:15px 0 0 0;
        color:$subTitleColor;
        font-size: 14px;
        font-weight: normal;
        padding:0 0 0 16px;
      }
      p:nth-child(2){
        margin: 16px 0 0 0 ;
        text-align: center;
        textarea{
          width: 277px;
          height: 218px;
          padding:10px;
          resize: none;
          background: $whiteColor;
        }
      }
      p:nth-child(3){
        margin: 25px 0 0 0 ;
        button:nth-child(1){
          @include radiusBtn(80px,30px,#8793b2,$whiteColor,#8793b2,4px);
          margin:0 36px;
        }
        button:nth-child(2){
          margin:0 36px;
          @include radiusBtn(80px,30px,$whiteColor,$subTitleColor,$borderColor,4px)
        }
      }
    }
  }
  .kewWord-top{
    padding:16px 0 16px 16px;
    min-width: 1020px;
    width: 100%;
    position: relative;
    //line-height: 62px;
    background: $whiteColor;
    .phasesubject{
      span:nth-child(1){
        float: left;
        display: inline-block;
        height:32px;
        line-height: 32px;
        color:$subTitleColor;
        font-size: 12px;
        margin: 0 16px 0 0;
        font-style: normal;
      }
      #phase{
        float:left;
        margin:4px 16px 0 16px;
        color:$subTitleColor;
      }
      span:nth-child(3){
        float: left;
        display: inline-block;
        height:32px;
        line-height: 32px;
        color:$subTitleColor;
        font-size: 12px;
        margin: 0 16px 0 16px;
        font-style: normal;
      }
      #subject{
        float:left;
        margin:4px 16px 0 16px;
        color:$subTitleColor;
      }
    }
    .addDiv{
      margin: 16px 0 0 0;
      input{
        width: 376px;
        height: 30px;
        text-indent:10px;
        float: left;
      }
      button{
        @include radiusBtn(80px,30px,$btnBg,$tabColor,$btnBg,5px);
        margin-left: 16px;
        float: left;
        color:$whiteColor;
        font-size: 14px;
      }
    }
  }
  .bottom{
    margin:16px 0 0 0;
    padding-bottom: 10px;
    width: 100%;
    background: #fff;
    .wrap_table{
      width:100%;
      margin-bottom: 15px;
      //overflow: scroll;
      //height: auto;
      .fixed-width{
        width: 100%;
        //min-width: 1200px;
        td{
          line-height: 1.4em;
        }
      }
    }
  }
}


.coverDiv{
  display: none;
  position: fixed;
  top:0;
  left:0;
  background: #8c98a4;
  opacity: .5;
}
.alertDiv{
  display: none;
  position: fixed;
  //float: left;
  width: 254px;
  height: 178px;
  top:50%;
  left:50%;
  margin-top: -127px;
  margin-left: -89px;
  background: $whiteColor;
  border-radius: 5px;
  h4{
    text-align: center;
    margin:16px 0 0 0;
    font-weight: normal;
    font-size: 14px;
  }
  p:nth-child(2){
    margin: 25px 0 0 0;
    text-align: center;
    input{
      width: 200px;
      height: 30px;
      text-indent: 10px;
    }
  }
  p:nth-child(3){
    margin: 30px auto 0;
    width:200px;
    .alert-submit{
      float: left;
      @include radiusBtn(80px,30px,#8793b2,$whiteColor,#8793b2,4px);
    }
    .alert-del{
      float: right;
      @include radiusBtn(80px,30px,#8793b2,$whiteColor,#8793b2,4px);
    }
  }
}
