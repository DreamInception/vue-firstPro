@import "config";
@import "compass";
$bg-color:#fff;
$text-color: #666;
$border-color:#d2d2d2;
@import "table";

.pad15{
  padding: 15px;

}
@mixin btn($buttonWidth:80px,$buttonHeight:30px,$bg:$mainColor,$fC:$mainColor){
  width:$buttonWidth;
  height:$buttonHeight;
  background: $bg;
  color:$fC;
  font-size: 14px;
  line-height:$buttonHeight;
  text-align: center;
  border-radius: 3px;
  display: block;
  float: left;
  cursor: pointer;

}
.main{
  font-size: 12px;
  color: #666;
  width: 940px;
  margin: 15px auto 0;
}
.normal_block{
  padding: 10px 17px;
  background: #fff;
  margin-bottom: 17px;
  .normal_block_title{
    line-height: 28px;
    margin-bottom: 7px
  }
}
.top{
  ul{
    margin-left: -74px;
    li{
      width: 160px;
      height: 85px;
      background: #f2f6f9;
      text-align: center;
      box-sizing: border-box;
      padding: 5px 0 0;
      float: left;
      margin-left: 74px;
      p{
        padding-bottom: 5px;
        span{
          font-size: 24px;
        }
      }
    }
  }
}
.w_big{
  font-size: 24px;
}
.fl{
  float: left;
}
.order_tips{
  dd{
    margin: 15px 0;
    label{
      float: left;
      width: 64px;
      line-height: 27px;
    }
    .wrap_status{
      li{
        float: left;
        padding: 7px 9px;
        &.cur{
          background: #d5dbe8;
        }
      }
    }
    &.buyer{
      .selectbox{
        height: 26px;
        line-height: 26px;
        float: left;
        border-radius: 0;
        .selectbox_value{
          font-size: 12px;
        }
      }
      .buyer_write{
        float: left;
        width: 390px;
        height: 28px;
        border:1px solid $borderColor;
        border-left:none;
        padding: 0 5px;
      }
    }
    &.buy_time{
      input{
        width: 143px;
        height: 28px;
        border: 1px solid $borderColor;
        box-sizing: border-box;
        padding: 0 5px 0 12px;
        background: url(../images/date.png) no-repeat 117px 2px;
        display: inline-block;
      }
      span{
        margin: 0 10px;
      }
    }
    &.wrap_btns{
      ul{
        margin-left:350px;
        li{
          @include btn(80px,30px,#8793b2,$whiteColor);
          margin-right: 30px;
        }
      }
    }
  }
}
.bottom{
  padding-bottom: 30px;
  background: #fff;
}
.wrap_table{
  width:940px;
  overflow: scroll;
  height: auto;
  min-height: 200px;
  .fixed-width{
    min-width: 1387px;
    td{
      line-height: 1.4em;
    }
  }
}
.selectbox_list{
  width: 122px;
  top:26px
}
.selectbox_body{
  li{
    font-size: 12px;

  }
}


